<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CustomCalendarStyle">
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/material_dynamic_primary40</item>
        <item name="android:textColorPrimary">@color/material_dynamic_primary40</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
</resources>